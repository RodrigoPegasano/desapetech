<%- include('partials/head'); -%>
<%- include('partials/header2'); -%>

<div class="container">
<p class="text-center tituloPrincipalDaPagina" >Alterar endereço</p>
    <form action="">
        <div class="form-row">
            <div class=" form col-md-2">
                <input type="text" class="form-control" name="cep" id="cep" placeholder="CEP (00000-000)">
            </div>
        </div>

        <div class="form-row">
            <div class="form col-md-8">
                <input type="text" placeholder="Endereço" class="form-control">
            </div>
            <div class="form col-md-4">
                <input type="text" placeholder="Número" class="form-control ">
            </div>
        </div>

        <div class="form-row">
            <div class="form col-md-12">
                <input type="text" placeholder="Complemento" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form col-md-5">
                <input type="text" name="bairro" id="bairro" placeholder="Bairro" class="form-control">
            </div>

            <div class="form col-md-5">
                <input type="text" name="cidade" id="cidade" placeholder="Cidade" class="form-control">
            </div>

            <div class="form col-md-2">
                <input type="text" name="estado" id="estado" placeholder="Estado" class="form-control">
            </div>
        </div>
        <br>
        </form>

        <!-- ;; -->

        <!-- parte do modal -->
            <!-- Button trigger modal -->
            <a  href="/carrinho" type="button" class="btn btn-success " data-toggle="modal" data-target="#exampleModalCenter">
                Atualizar Endereço
            </a>
            
            <!-- Modal -->
           <div class="container">
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Endereço alterado</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <p class="text-center tituloPrincipalDaPagina" >Endereço atualizado com sucesso</p>
                            <img class="mx-auto d-block" src="/images/home.png" alt="" height="150px">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/carrinho">
                            <button type="button" class="btn btn-primary">Voltar</button>
                        </a>
                    </div>
                </div>
                </div>
            </div>
           </div>

        <!-- ;; -->
    </div>

<%- include('partials/footer'); -%>
