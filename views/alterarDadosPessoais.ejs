<%- include('partials/head'); -%>
<%- include('partials/header2'); -%>
        <div class="container alterarDadosBottom">

        <form action="">

            <p class="tituloPrincipalDaPagina">Preencha seus dados pessoais</p>
            <br>
            <div class="form-row">
                <div class="form col-md-6">
                    <input type="text" name="email" id="email" placeholder="Email" class="form-control">
                </div>
                <div class="form col-md-6">
                    <input type="text" name="confirmaEmail" id="confirmaEmail" placeholder="Confirme o Email" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form col-md-6">
                    <input type="text" name="nome" id="nome" placeholder="Nome" class="form-control">
                </div>
                <div class="form col-md-6">
                    <input type="text" name="sobrenome" id="sobrenome" placeholder="Sobrenome" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form col-md-3">
                    <input type="text" name="rg" id="rg" placeholder="RG" class="form-control">
                </div>
                <div class="form-row col-md-3">
                    <input type="text" name="cpf" id="cpf" placeholder="CPF" class="form-control">
                </div>
            </div>

            <div class="form-row">
                <div class="form col-md-3">
                    <input type="text" name="celular" id="celular" placeholder="Celular" class="form-control">
                </div>
                <div class="form col-md-3">
                    <input type="text" name="confirmeCelular" id="confirmeCelular" placeholder="Confirme o telefone" class="form-control">
                </div>
            </div>

            <!-- parte do modal -->
            <!-- Button trigger modal -->
            <a  href="/carrinho" type="button" class="btn btn-success " data-toggle="modal" data-target="#exampleModalCenter">
                Atualizar novo
            </a>
            
            <!-- Modal -->
           <div class="container">
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Dados Atualizado</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <p class="text-center tituloPrincipalDaPagina" >Dados Atualizado com sucesso</p>
                            <img class="mx-auto d-block" src="/images/home.png" alt="" height="150px">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/carrinho">
                            <button type="button" class="btn btn-primary">Voltar</button>
                        </a>
                    </div>
                </div>
                </div>
            </div>
           </div>

        <!-- ;; -->
        </form>
    </div>
<%- include('partials/footer'); -%>