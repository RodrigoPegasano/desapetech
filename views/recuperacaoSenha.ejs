<%- include('partials/head'); -%>
<%- include('partials/header2'); -%>

        <div class="row recuperacao container recuperacaoMargimBottom ">
            <img src="images/login-pagina.png" alt="" class="form-row">
            <p class="form-row">Digite seu email para a recuperação da senha</p>
            <input class="form-row" type="text" name="" id="" placeholder="mail@mail.com">

            <!-- parte do modal -->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary form-row" data-toggle="modal" data-target="#exampleModalCenter">
                Enviar
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Recuperação de Senha</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <p class="text-center tituloPrincipalDaPagina" >Email de Recuperação enviado com sucesso!</p>
                            <img class="mx-auto d-block" src="/images/sucess_email.png" alt="" height="150px">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/login">
                            <button type="button" class="btn btn-primary">Voltar</button>
                        </a>
                    </div>
                </div>
                </div>
            </div>

        </div>



<%- include('partials/footer'); -%>